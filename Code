###Simple plot  
plot(colaboracoes, vertex.shape="none",edge.arrow.size=.5, vertex.label=V(colaboracoes)$media, 
     vertex.label.font=2, vertex.label.color="grey45",
     vertex.label.cex=0.8, edge.color="grey45")

###Creating groups
ceb=cluster_edge_betweenness(colaboracoes)
###Editing groups manually
ceb=edit(ceb)
###Ploting with groups in the background
par(mar=c(0.5,0.5,0.5,0.5))
plot(ceb,colaboracoes,vertex.label.color="black")

###Hub and authority scores
hub_score(colaboracoes)
authority_score(colaboracoes)
